@{
    ViewData["Title"] = "User List";
}
@section Scripts{

    <script src="~/app/controllers/user/index.js" asp-append-version="true"></script>
    <script>
        var userObj = new UserController();
        userObj.initialize();
    </script>

}
@section Styles{

}

<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản Lý Người Dùng</h3>
        </div>
        <div class="title_right">
            <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">

                @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Create)).Succeeded)
                {
                    <button class="btn btn-success" id="btn-create" type="button"><i class="fa fa-plus"></i>Create</button>
                }
                else
                {
                    <button class="btn disabled" disabled><i class="fa fa-plus"></i>Tạo Mới</button>
                }
            </div>
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Nhập từ tìm kiếm...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Tìm!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách vận chuyển</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-center">Tài Khoản</th>
                                <th class="text-center">Họ Tên</th>
                                <th class="text-center">Avatar</th>
                                <th class="text-center">Ngày Đăng Ký</th>
                                <th class="text-center">Trạng Thái</th>
                                <th class="text-center">Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    record/page.
                                </span>
                                Total record count: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>

            <td class="text-center">{{UserName}}</td>
            <td class="text-center">{{FullName}}</td>
            <td class="text-center">
                {{{Avatar}}}
            </td>
            <td class="text-center">{{{DateCreated}}}</td>
            <td class="text-center">{{{Status}}}</td>
            <td class="text-center">
                @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                }
                else
                {
                    <a class="btn btn-xs disabled" disabled><i class="fa fa-pencil-square-o"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Delete)).Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn-delete"><i class="fa fa-trash-o"></i></a>

                }
                else
                {
                    <button class="btn btn-xs  disabled" disabled><i class="fa fa-trash-o"></i></button>
                }
            </td>
        </tr>
    </script>
</div>
<script id="role-template" type="x-tmpl-mustache">
    <div class="checkbox">
        <label>
            <input type="checkbox" {{Checked}} value="{{Name}}" name="ckRoles">
            <span class="text">{{Description}}</span>
        </label>
    </div>
</script>
@await Html.PartialAsync("_AddEditModal.cshtml")