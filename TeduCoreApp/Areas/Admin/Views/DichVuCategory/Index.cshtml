<div class="page-title">
    <div class="title_left">
        <h3>Danh Mục Dịch Vụ</h3>
    </div>

    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
            @if ((await AuthorizationService.AuthorizeAsync(User, "SERVICE_CATEGORY", Operations.Create)).Succeeded)
            {
                <button class="btn btn-success" id="btnCreate" type="button">Tạo Mới</button>
            }
            else
            {
                <button class="btn disabled" disabled><i class="fa fa-plus"></i>Tạo Mới</button>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh sách danh mục dịch vụ</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul id="treeProductCategory"></ul>
                <div id="contextMenu" class="easyui-menu" style="width:120px;">
                    @if ((await AuthorizationService.AuthorizeAsync(User, "SERVICE_CATEGORY", Operations.Update)).Succeeded)
                    {
                        <div id="btnEdit" data-options="iconCls:'icon-edit'">Sửa</div>
                    }
                    @*else
                        {
                            <a class="btn-not-permission" data-options="iconCls:'icon-edit'" disabled></a>
                        }*@

                    @if ((await AuthorizationService.AuthorizeAsync(User, "SERVICE_CATEGORY", Operations.Delete)).Succeeded)
                    {
                        <div id="btnDelete" data-options="iconCls:'icon-remove'">Xoá</div>
                    }
                    @*else
                        {
                            <a class="btn-not-permission" data-options="iconCls:'icon-edit'" disabled></a>
                        }*@
                </div>
            </div>
        </div>
    </div>
</div>
