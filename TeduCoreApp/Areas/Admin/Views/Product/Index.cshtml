@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/admin/js/vendors/jquery-easyui/themes/icon.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/admin/js/vendors/jquery-easyui/jquery.easyui.min.js"></script>
    <script src="~/admin/js/vendors/bootbox/bootbox.js"></script>
    <environment names="Development">
        <script src="~/admin/app/controllers/product/image-management.js"></script>
        <script src="~/admin/app/controllers/product/quantity-management.js"></script>
        <script src="~/admin/app/controllers/product/whole-price-management.js"></script>
        <script src="~/admin/app/controllers/product/index.js"></script>
        <script>
            var product = new productController();
            product.initialize();
        </script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/admin/app/controllers/product/image-management.js"></script>
        <script src="~/admin/app/controllers/product/quantity-management.js"></script>
        <script src="~/admin/app/controllers/product/whole-price-management.js"></script>
        <script src="~/admin/app/controllers/product/index.js"></script>
        <script>
            var product = new productController();
            product.initialize();
        </script>
    </environment>

}

<div class="page-title">
    <div class="title_left">
        <h3>Sản Phẩm:  <small>danh sách sản phẩm</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-3 col-sm-5 col-xs-12 form-group pull-right">

            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Go!</button>
                </span>
            </div>
        </div>
        <div class="col-md-3 col-sm-12  form-group pull-right">
            <input id="IdCategory" type="hidden" />
            <select class="form-control" id="ddlCategorySearch">
                @*<option>--Chọn Theo Danh Mục--</option>*@
            </select>
        </div>
        <div class="col-md-6 col-sm-12  form-group pull-right">
            @if ((await AuthorizationService.AuthorizeAsync(User, "PRODUCT_LIST", Operations.Create)).Succeeded)
            {
                <button id="btnCreate" class="btn btn-success"><i class="fa fa-plus"></i>Tạo Mới</button>
            }
            else
            {
                <button class="btn disabled" disabled>
                    <i class="fa fa-plus"></i>Tạo Mới
                </button>
            }
            <a class="btn btn-danger" href="~/templates/ProductImportTemplate.xlsx">Template</a>
            <button class="btn btn-primary" id="btn-import" type="button"><i class="fa fa-file-excel-o"></i></button>
            <button class="btn btn-default" id="btn-export" type="button"><i class="fa fa-forward"></i></button>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh sách vận chuyển</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">CategoryId</th>
                            <th class="text-center">Tên</th>
                            <th class="text-center">Danh Mục</th>
                            <th class="text-center">Giá</th>
                            <th class="text-center">Hình Ảnh</th>
                            <th class="text-center">Ngày Tạo</th>
                            <th class="text-center">Trạng Thái</th>
                            <th class="text-center" width="20%">Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td class="text-center">{{CategoryId}}</td>
        <td class="text-center">{{Name}}</td>
        <td class="text-center">{{CategoryName}}</td>
        <td class="text-center">{{Price}}</td>
        <td class="text-center">{{{Image}}}</td>
        <td class="text-center">{{CreatedDate}}</td>
        <td class="text-center">{{{Status}}}</td>
        <td scope="row">
            @if ((await AuthorizationService.AuthorizeAsync(User, "PRODUCT_LIST", Operations.Update)).Succeeded)
            {
                <a class="btn btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></a>
            }
            else
            {
                <button class="btn btn-sm disabled" disabled><i class="fa fa-pencil"></i></button>
            }
            @if ((await AuthorizationService.AuthorizeAsync(User, "PRODUCT_LIST", Operations.Delete)).Succeeded)
            {
                <a class="btn btn-sm btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></a>
            }
            else
            {
                <button class="btn btn-sm disabled" disabled><i class="fa fa-trash"></i></button>
            }
            <a data-id="{{Id}}" class="btn btn-xs btn-images"><i class="fa fa-image"></i></a>
            <a data-id="{{Id}}" class="btn btn-xs btn-quantity"><i class="fa fa-hourglass-start"></i></a>
            <a data-id="{{Id}}" class="btn btn-xs btn-whole-price"><i class="fa fa-money"></i></a>
        </td>
    </tr>
</script>
@await Html.PartialAsync("_AddEditModal.cshtml")
@await Html.PartialAsync("_ImportExcelModal.cshtml")
@await Html.PartialAsync("_QuantityManagement.cshtml")
@await Html.PartialAsync("_ImageManagement.cshtml")
@await Html.PartialAsync("_WholePriceManagement.cshtml")