@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/shipments/index.js" asp-append-version="true"></script>
    <script>
        var shipObj = new ShipController();
        shipObj.initialize();
    </script>
}
@section Styles{
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản Lý Vận Chuyển</h3>
        </div>

        <div class="title_right">

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtFromDate" class="form-control" placeholder="Từ Ngày">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtToDate" class="form-control" placeholder="Đến Ngày">
            </div>
            <div class="col-md-2 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtSearchKeyword" class="form-control" placeholder="Tìm kiếm...">
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group">
                <button class="btn btn-default" id="btn-search" type="button">Tìm Kiếm!</button>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group">
                @{
                    var resultCreate = await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Create);
                    var resultDelete = await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Delete);
                    var resultUpdate = await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Update);
                }
                @if (resultCreate.Succeeded)
                {
                    <button class="btn btn-success" id="btn-create" type="button">Tạo Mới</button>
                }
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Nhà Vận Chuyển</th>
                                <th>Thời Gian</th>
                                <th>Chi Phí Vận Chuyển</th>
                                <th>Mã ZipCode</th>
                                <th>Địa Chỉ</th>
                                <th>Tồng Chi Phí</th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    recors/page.
                                </span>
                                Total records: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Id}}</td>
            <td>{{Carriers}}</td>
            <td>{{{DeliveryTime}}}</td>
            <td>{{CollectionFee}}</td>
            <td>{{{ZipCode}}}</td>
            <td>{{IdAddress}}</td>
            <td>{{Total}}</td>
            <td>
                @if (resultUpdate.Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn  btn-xs btn-info btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                }
                else
                {
                    <a class="btn btn-xs  btn-danger btn-not-permission" disabled><i class="fa fa-pencil-o"></i></a>
                }
                @if (resultDelete.Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn btn-xs  btn-danger btn-delete"><i class="fa fa-trash-o"></i></a>
                }
                else
                {
                    <a class="btn btn-xs  btn-danger btn-not-permission" disabled><i class="fa fa-trash-o"></i></a>
                }
            </td>
        </tr>
    </script>
</div>

@await Html.PartialAsync("_Modal.cshtml")