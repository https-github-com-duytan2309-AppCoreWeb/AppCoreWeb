@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts{

    <script src="~/admin/js/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/admin/js/vendors/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    @*<script>
            $(document).ready(function () {
                $('#tbl-product').DataTable();
            })
        </script>*@

    <script src="~/admin/app/controllers/shipments/index.js" asp-append-version="true"></script>
    <script>
        var shipObj = new ShipController();
        shipObj.initialize();
    </script>
}
@section Styles{

    <link href="~/admin/js/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/admin/js/vendors/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}

<div class="">

    <div class="page-title">
        <div class="title_left">
            <h4>Quản Lý Vận Chuyển</h4>
        </div>
        <div class="title_right">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <div class="col-md-2 col-sm-2 col-xs-12 pull-right form-group">

                        @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Create)).Succeeded)
                        {
                            <button class="btn btn-success" id="btn-create" type="button"><i class="fa fa-plus"></i> Tạo Mới</button>
                        }
                        else
                        {
                            <button class="btn disabled" disabled><i class="fa fa-plus"></i> Tạo Mới</button>
                        }
                    </div>
                    <div class="col-md-3 col-sm-3 form-group pull-right">
                        <div class="input-group">
                            <input type="text" id="txtFromDate" class="form-control" placeholder="Từ Ngày">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 form-group pull-right">
                        <div class="input-group">
                            <input type="text" id="txtToDate" class="form-control" placeholder="Đến Ngày">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" id="txtSearchKeyword" class="form-control" placeholder="Nhập từ khóa...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Tìm!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách vận chuyển</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th class="text-center">Mã</th>
                                <th class="text-center">Nhà Vận Chuyển</th>
                                <th class="text-center">Thời Gian</th>
                                <th class="text-center">Chi Phí Vận Chuyển</th>
                                <th class="text-center">Mã ZipCode</th>
                                <th class="text-center">Địa Chỉ</th>
                                <th class="text-center">Tồng Chi Phí</th>
                                <th class="text-center">Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    recors/page.
                                </span>
                                Total records: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td class="text-center">{{Id}}</td>
            <td class="text-center">{{Carriers}}</td>
            <td class="text-center">{{{DeliveryTime}}}</td>
            <td class="text-center">{{CollectionFee}}</td>
            <td class="text-center">{{{ZipCode}}}</td>
            <td class="text-center">{{IdAddress}}</td>
            <td class="text-center">{{Total}}</td>
            <td class="text-center">
                @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Update)).Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn  btn-xs btn-info btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                }
                else
                {
                    <button class="btn btn-xs disabled" disabled><i class="fa fa-pencil-square-o"></i></button>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPER", Operations.Delete)).Succeeded)
                {
                    <a href="#" data-id="{{Id}}" class="btn btn-xs  btn-danger btn-delete"><i class="fa fa-trash-o"></i></a>
                }
                else
                {
                    <button class="btn btn-xs  disabled" disabled><i class="fa fa-trash-o"></i></button>
                }
            </td>
        </tr>
    </script>
</div>
@await Html.PartialAsync("_Modal.cshtml")