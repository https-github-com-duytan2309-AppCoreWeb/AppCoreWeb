@using TeduCoreApp.Extensions
@{
    ViewData["Title"] = "Bill management";
}
@section Scripts{
    <script src="~/admin/js/vendors/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/admin/js/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/admin/js/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/admin/app/controllers/bill/index.js" asp-append-version="true"></script>
    <script>
        var billObj = new BillController();
        billObj.initialize();
    </script>
}
@section Styles{
    <link href="~/admin/js/vendors/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/admin/js/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/admin/js/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
}

<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản Lý Hóa Đơn</h3>
        </div>

        <div class="title_right">

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtFromDate" class="form-control" placeholder="Từ Ngày">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtToDate" class="form-control" placeholder="Đến Ngày">
            </div>
            <div class="col-md-2 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtSearchKeyword" class="form-control" placeholder="Tìm kiếm...">
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group">
                <button class="btn btn-default" id="btn-search" type="button">Tìm Kiếm!</button>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 form-group">
                @if ((await AuthorizationService.AuthorizeAsync(User, "BILL_LIST", Operations.Create)).Succeeded)
                {
                    <input id="ddlAdminId" value="@User.GetSpecificClaim("UserId")" type="hidden" />
                    <button class="btn btn-success" id="btn-create" type="button"><i class="fa fa-plus"></i>Tạo Đơn</button>
                }
                else
                {
                    <button class="btn disabled" disabled type="button"><i class="fa fa-plus"></i>Tạo Đơn</button>
                }
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách vận chuyển</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Họ Tên</th>
                                <th>Hình Thức Thanh Toán</th>
                                <th>Ngày Tạo</th>
                                <th>Trạng Thái Bill</th>
                                <th>Chi Tiết Bill</th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    recors/page.
                                </span>
                                Total records: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Id}}</td>
            <td>{{CustomerName}}</td>
            <td>{{{PaymentMethod}}}</td>
            <td>{{{DateCreated}}}</td>
            <td>{{{BillStatus}}}</td>
            <td>
                <a href="#" data-id="{{Id}}" class="btn-view"><i class="fa fa-eye"></i></a>
            </td>
        </tr>
    </script>
</div>
@await Html.PartialAsync("_DetailModal.cshtml")